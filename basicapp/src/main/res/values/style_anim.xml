<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 窗口底部进入动画 -->
    <style name="bottomInWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>


    <!-- 窗口淡入浅出动画 -->
    <style name="fadeInWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>

</resources>